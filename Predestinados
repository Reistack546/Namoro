    function validarEmail(email) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }

    function fazerCadastro() {
      const email = document.getElementById('cadastroEmail').value.trim();
      const senha = document.getElementById('cadastroSenha').value;
      if (!validarEmail(email)) return alert('Digite um e-mail v√°lido.');
      if (!senha || senha.length < 4) return alert('Senha muito curta.');
      if (usuarios[email]) return alert('J√° cadastrado. Fa√ßa login.');
      usuarios[email] = senha;
      localStorage.setItem('usuarios', JSON.stringify(usuarios));
      alert('Cadastro feito com sucesso. Agora fa√ßa login.');
      mostrarLogin();
    }

    function fazerLogin() {
      const email = document.getElementById('loginEmail').value.trim();
      const senha = document.getElementById('loginSenha').value;
      if (!validarEmail(email)) return alert('Digite um e-mail v√°lido.');
      if (usuarios[email] === senha) {
        localStorage.setItem('usuarioLogado', email);
        mostrarCursos();
      } else {
        alert('E-mail ou senha incorretos.');
      }
    }

    function mostrarLogin() {
      document.getElementById('cadastro').style.display = 'none';
      document.getElementById('login').style.display = 'block';
    }

    function mostrarCadastro() {
      document.getElementById('login').style.display = 'none';
      document.getElementById('cadastro').style.display = 'block';
    }

    function mostrarCursos() {
      document.getElementById('cadastro').style.display = 'none';
      document.getElementById('login').style.display = 'none';
      document.getElementById('cursos').style.display = 'block';
      const lista = document.getElementById('listaCursos');
      lista.innerHTML = '';
      cursos.forEach(curso => {
        const div = document.createElement('div');
        div.className = 'course';
        div.innerHTML = `<h3>${curso.titulo} - R$ ${curso.preco.toFixed(2)}</h3>
          <p>${curso.desc}</p>
          <p><em>Para acessar, realize o pagamento via PIX para <strong>indraxxiv06@gmail.com</strong>.</em></p>
          <p><em>Ap√≥s pagar, envie o comprovante no WhatsApp <strong>(11) 98985-4148</strong> informando o nome do curso comprado para receber o acesso.</em></p>`;
        lista.appendChild(div);
      });
    }
